<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @RenderSection("css", required: false)
    @Scripts.Render("~/bundles/modernizr")

    <script type="text/javascript">
        //this sets the jlinq url path for the bundles...this way we can use it in the rest of our apps.
        var JLinqUrlPath = window.location.protocol + '//' + window.location.host + '@Scripts.Url("~/bundles/Linq4Javscript")';
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Linq 4 Javascript Unit Tests", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Readonly Array Tests", "ReadonlyArrayTests", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Async Unit Tests", "AsyncUnitTests", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Async Working Environment", "AsyncWorkingEnvironment", "Home", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Linq 4 Javascript <a href="https://github.com/dibiancoj/Linq4Javascript">On GitHub</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Linq4Javscript")
    @RenderSection("scripts", required: false)
</body>
</html>
